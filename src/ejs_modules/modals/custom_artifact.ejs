<div class="modal" id="NewArtifactModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">New Artifact</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group">
                    <!-- This is for selecting the artifact type -->
                    <select class="custom-select" id="custom_type">

                    </select>
                </div>
                <div class="form-group">
                    <!-- This is for selecting the artifact type -->
                    <select class="custom-select" id="existing_location" onchange="populate_pos();">
                        <option value="None">None</option>
                        <option value="goal">Goal</option>
                    </select>
                </div>
                <div class="form-group form-inline">
                    <label style="width: 30px;">X:</label>
                    <input id="x_pos" type="text" class="form-control" placeholder="position" required>
                </div>
                <div class="form-group form-inline">
                    <label style="width: 30px;">Y:</label>
                    <input id="y_pos" type="text" class="form-control" placeholder="position" required>
                </div>
                <div class="form-group form-inline">
                    <label style="width: 30px;">Z:</label>
                    <input id="z_pos" type="text" class="form-control" placeholder="position" required>
                </div>
                <div class="form-group">
                    <input id="notes" type="text" class="form-control" placeholder="notes" required>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button id="create_btn" type="button" class="btn btn-primary" onclick="createNewArtifact()">Create</button>
            </div>

        </div>
    </div>
</div>

<script>
    populateOpts('custom_type');
    populateBots("existing_location");

    // Updating the robot options with a key combo
    document.addEventListener ("keydown", function (zEvent) {
    if (zEvent.ctrlKey  &&  zEvent.altKey  &&  zEvent.key === "u") {  // case sensitive
        console.log("special combo");
        populateBots("existing_location");
    }
} );
</script>