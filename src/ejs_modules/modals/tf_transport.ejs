<div class="modal" id="TFModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Transport TF</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group">
                    <!-- This is for selecting the robot to send the transform to -->
                    <select class="custom-select" id="select_robot_transform">

                    </select>
                </div>
                <div class="form-group form-inline">
                    <label style="width: 125px;">X Translation:</label>
                    <input id="x_translation" type="text" class="form-control" placeholder="position" required>
                </div>
                <div class="form-group form-inline">
                    <label style="width: 125px;">Y Translation:</label>
                    <input id="y_translation" type="text" class="form-control" placeholder="position" required>
                </div>
                <div class="form-group form-inline">
                    <label style="width: 125px;">Z Translation:</label>
                    <input id="z_translation" type="text" class="form-control" placeholder="position" required>
                </div>

                <div class="form-group form-inline">
                    <label style="width: 125px;">X Rotation:</label>
                    <input id="x_rotation" type="text" class="form-control" placeholder="Quaternion rotation" required>
                </div>
                <div class="form-group form-inline">
                    <label style="width: 125px;">Y Rotation:</label>
                    <input id="y_rotation" type="text" class="form-control" placeholder="Quaternion rotation" required>
                </div>
                <div class="form-group form-inline">
                    <label style="width: 125px;">Z Rotation:</label>
                    <input id="z_rotation" type="text" class="form-control" placeholder="Quaternion rotation" required>
                </div>
                <div class="form-group form-inline">
                    <label style="width: 125px;">W Rotation:</label>
                    <input id="w_rotation" type="text" class="form-control" placeholder="Quaternion rotation" required>
                </div>
            </div>

            <!-- Modal footer -->
            <div>
                <button id="edit_submit" type="button" class="btn btn-warning" style="float: left;" onclick="close_tf_modal()">DO NOT SEND</button>
                <button id="edit_submit" type="button" class="btn btn-primary" style="float: right;" onclick="send_tf_to()">SEND TO ROBOT</button>
            </div>
        </div>
    </div>
</div>


<!-- This is just a little thing to close the modal -->
<script>
    function close_tf_modal(){
        $('#TFModal').modal('hide');
    }
    
</script>